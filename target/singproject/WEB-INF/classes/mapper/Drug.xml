<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xmkeshe.dao.IDrugDAO">
    <insert id="doCreate" parameterType="Drug">
        INSERT INTO drug(drid,iid,title,prodate,address,phone,count,status)VALUES
        (#{drid},#{iid.iid},#{title},#{prodate},#{address},#{phone},#{count},#{status})
    </insert>
    <select id="findAllBySplit" parameterType="java.util.Map" resultType="Drug">
       SELECT drid,title,prodate,address,phone,count,status FROM drug WHERE ${column} LIKE #{keyWord} LIMIT #{currentPage},#{lineSize}
    </select>

    <select id="getAllCount" parameterType="java.util.Map" resultType="integer">
       SELECT count(drid) FROM drug WHERE ${column} LIKE #{keyWord}
    </select>

    <update id="doUpdate" parameterType="String">
      UPDATE drug SET status=2 WHERE drid=#{drid}
    </update>
    <update id="doUpdateByCount" parameterType="java.util.Map">
      UPDATE drug SET count=#{count} WHERE drid=#{drid}
    </update>
</mapper>