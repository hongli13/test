<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xmkeshe.dao.IItemDAO">
    <insert id="doCreate" parameterType="Item">
        INSERT INTO item(title,note)VALUES (#{title},#{note})
    </insert>

    <select id="findAllBySplit" parameterType="java.util.Map" resultType="Item">
       SELECT iid,title,note FROM item LIMIT #{currentPage},#{lineSize}
    </select>

    <select id="getAllCount"  resultType="integer">
       SELECT count(iid) FROM item
    </select>

    <select id="findAll" resultType="Item">
       SELECT iid,title,note FROM item
    </select>
</mapper>  